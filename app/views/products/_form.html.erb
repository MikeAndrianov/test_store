<%= form_for @product, :html => {:class => 'row'} do |f| %>
  
  <%= render 'layouts/form_errors', :element => @product %>

  <div class="col-md-4">
    <div class="form-group">
      <%= f.label :name, :class => 'control-label' %><br>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :description, :class => 'control-label' %><br>
      <%= f.text_area :description, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :price, :class => 'control-label' %><br>
      <%= f.text_field :price, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.fields_for(:categorizations, @categorization) do |f_c| %>
        <%= f_c.label :category_id, "Category" %>
        <%= f_c.select :category_id, nested_set_options(Category){|i| "#{'-' * i.level} #{i.name}"}, {}, {:class => "form-control"} %>
      <% end %>
    </div>
   
    <div class="additional-fields">
       <%= render :partial => "additional_fields" %>
     </div>

    <div class="actions">
      <%= f.submit 'Save', :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
