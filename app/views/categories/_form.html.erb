<%= form_for @category, :html => {:class => 'row'} do |f| %>
  
  <%= render 'layouts/form_errors', :element => @category %>

  <div class="col-md-4">
    <div class="form-group">
      <%= f.label :name, :class => 'control-label' %><br>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.select :parent_id, nested_set_options(Category, @category){|i| "#{'-' * i.level} #{i.name}" }, {}, {:class => "form-control"} %>
    </div>

    
    <div class="actions">
      <%= f.submit 'Save', :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
